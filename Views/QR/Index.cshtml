<script>
    let progress = 0;
    const intervalTime = 100; // her adÄ±mda kaÃ§ ms ilerlesin
    const updateTime = 5000;  // toplam sÃ¼re (ms)

    function updateQR() {
        fetch('/QR/Generate?' + new Date().getTime())
            .then(res => res.text())
            .then(svg => {
                document.getElementById('qrArea').innerHTML = svg;
                progress = 0;
            });
    }

    // Progress Ã§ubuÄŸunu her 100ms'de bir gÃ¼ncelle
    setInterval(() => {
        progress += intervalTime;
        let percent = (progress / updateTime) * 100;
        document.getElementById('progressBar').style.width = percent + "%";
        document.getElementById('progressBar').setAttribute('aria-valuenow', percent);

        if (progress >= updateTime) {
            updateQR();
        }
    }, intervalTime);

    updateQR(); // ilk yÃ¼kleme
</script>