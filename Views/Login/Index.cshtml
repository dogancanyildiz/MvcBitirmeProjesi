@model MvcBitirmeProjesi.Models.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <div class="text-center mb-4">
            <!-- Geçici logo -->
            <img src="https://www.ktun.edu.tr/Content/images/logo/logo.png" alt="KTÜN Üniversitesi" class="mb-3" style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;">
            <h2 class="fw-bold">Giriş Yap</h2>
        </div>

        <form asp-action="Index" method="post">
            <div class="form-group mb-3">
                <label asp-for="TC" class="form-label">TC Kimlik No</label>
                <input asp-for="TC" class="form-control" placeholder="TC Kimlik numaranızı girin" />
                <span asp-validation-for="TC" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Giriş Yap</button>

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger mt-3 text-center">
                    TC veya şifre yanlış
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}