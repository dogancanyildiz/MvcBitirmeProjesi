@model MvcBitirmeProjesi.Models.User

@{
    ViewData["Title"] = "Profilim";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow border-0 rounded-lg">
                <div class="card-header bg-gradient bg-primary text-white p-4">
                    <div class="d-flex align-items-center">
                        <div style="width: 60px; height: 60px;"
                            class="bg-white text-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                            <i class="fas fa-user-circle fa-2x"></i>
                        </div>
                        <div>
                            <h2 class="mb-0">@Model.Name @Model.Surname</h2>
                            <p class="mb-0 opacity-75">
                                <i class="fas fa-id-badge me-1"></i> @Model.Role?.Name
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <h4 class="border-bottom pb-2 mb-4">
                        <i class="fas fa-info-circle me-2"></i>Kişisel Bilgiler
                    </h4>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="info-item p-3 bg-light rounded shadow-sm">
                                <p class="text-muted mb-1 small">
                                    <i class="fas fa-id-card me-1"></i> TC Kimlik No
                                </p>
                                <p class="fw-bold mb-0 fs-5">@Model.TC</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item p-3 bg-light rounded shadow-sm">
                                <p class="text-muted mb-1 small">
                                    <i class="fas fa-phone-alt me-1"></i> Telefon
                                </p>
                                <p class="fw-bold mb-0 fs-5">@Model.Phone</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item p-3 bg-light rounded shadow-sm">
                                <p class="text-muted mb-1 small">
                                    <i class="fas fa-user-tag me-1"></i> Yetki
                                </p>
                                <p class="fw-bold mb-0 fs-5">@Model.Role?.Name</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item p-3 bg-light rounded shadow-sm">
                                <p class="text-muted mb-1 small">
                                    <i class="fas fa-building me-1"></i> Birim
                                </p>
                                <p class="fw-bold mb-0 fs-5">@Model.Unit?.Name</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-4">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <a href="/QR/Scan"
                                class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-qrcode me-2"></i> QR Kod Tara
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/QR/TransferLogs"
                                class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-exchange-alt me-2"></i> Transfer Geçmişi
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a href="/QR/Logs"
                                class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center">
                                <i class="fas fa-history me-2"></i> Giriş Kayıtları
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Font Awesome kontrol - eğer yoksa CDN'den yükle
            if (!document.querySelector('link[href*="font-awesome"]')) {
                const link = document.createElement('link');
                link.rel = 'stylesheet';
                link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css';
                document.head.appendChild(link);
            }

            // Responsive düzenleme için - mobil cihazlarda görünüm düzeltme
            function adjustForMobile() {
                const cardHeader = document.querySelector('.card-header .d-flex');
                const avatar = cardHeader.querySelector('div:first-child');

                if (window.innerWidth <= 768) {
                    cardHeader.style.flexDirection = 'column';
                    cardHeader.style.textAlign = 'center';
                    avatar.style.marginBottom = '1rem';
                } else {
                    cardHeader.style.flexDirection = 'row';
                    cardHeader.style.textAlign = 'left';
                    avatar.style.marginBottom = '0';
                }
            }

            // Sayfa yüklendiğinde ve boyut değiştiğinde kontrol et
            adjustForMobile();
            window.addEventListener('resize', adjustForMobile);
        });
    </script>
}